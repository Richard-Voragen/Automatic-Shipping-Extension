{
    "manifest_version": 3,
    "name": "Tranzact Autofiller Extension",
    "version": "1.0",
    "description": "Takes data from ServiceNow and fills it into Tranzact.",
    "permissions": [
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://sutterprod.service-now.com/*", "https://tms.tranzact.com/*"],
        "js": [
          "content.js"
        ],
        "type": "module",
        "all_frames": true
      }
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ]
}